#include <stdio.h>

int main() {
    int i, j, k, space, rows;
    char ch = 'A';

    printf("Enter number of rows: ");
    scanf("%d", &rows);

    // 1. Right-angle triangle with numbers
    printf("\nRight-angle triangle with numbers:\n");
    for(i = 1; i <= rows; i++) {
        for(j = 1; j <= i; j++) {
            printf("%d", j);
        }
        printf("\n");
    }


    // 2. Diamond shape with numbers
    printf("\nDiamond shape with numbers:\n");
    for(i = 1; i <= rows; i++) {
        for(j = i; j < rows; j++)
            printf(" ");
        for(k = 1; k <= (2*i-1); k++)
            printf("%d", i);
        printf("\n");
    }
    for(i = rows-1; i >= 1; i--) {
        for(j = rows; j > i; j--)
            printf(" ");
        for(k = 1; k <= (2*i-1); k++)
            printf("%d", i);
        printf("\n");
    }




    // 3. Pyramid with asterisk
    printf("\nPyramid with asterisk:\n");
    for(i = 1; i <= rows; i++) {
        for(space = i; space < rows; space++)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("*");
        printf("\n");
    }

  // 4. Pyramid with alphabet
    printf("\nPyramid with alphabet:\n");
    for(i = 1; i <= rows; i++) {
        for(space = i; space < rows; space++)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("%c", ch);
        ch++;
        printf("\n");
    }

    return 0;
}
