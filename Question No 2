#include <stdio.h>

int main() {
    int i, j, k, space, rows;
    char ch;

    printf("Enter number of rows: ");
    scanf("%d", &rows);

    // 1. Right-angle triangle with numbers
    printf("\nRight-angle triangle with numbers:\n");
    for(i = 1; i <= rows; i++) {
        for(j = 1; j <= i; j++) {
            printf("%d", j);
        }
        printf("\n");
    }



    // 2. Diamond shape with numbers
    printf("\nDiamond shape with numbers:\n");
    for(i = 1; i <= rows; i++) {
        for(space = i; space < rows; space++)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("%d", i);
        printf("\n");
    }
    for(i = rows-1; i >= 1; i--) {
        for(space = rows; space > i; space--)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("%d", i);
        printf("\n");
    }



    // 3. Pyramid with asterisk
    printf("\nPyramid with asterisk:\n");
    for(i = 1; i <= rows; i++) {
        for(space = i; space < rows; space++)
            printf(" ");
        for(j = 1; j <= (2*i-1); j++)
            printf("*");
        printf("\n");
    }





    // 4. Pyramid using alphabet (e.g., A, ABA, ABCBA...)
    printf("\nPyramid using alphabet:\n");
    for(i = 1; i <= rows; i++) {
        // print increasing sequence
        for(ch = 'A'; ch < 'A' + i; ch++)
            printf("%c", ch);
        // print decreasing sequence
        for(ch = 'A' + i - 2; ch >= 'A'; ch--)
            printf("%c", ch);
        printf("\n");
    }

    return 0;
}
